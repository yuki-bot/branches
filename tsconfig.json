{
    "compilerOptions": {
      "target": "ES2017",
      "module": "amd",
      "lib": ["es5", "dom", "es2017"],
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "experimentalDecorators": true,
      "outFile": "index.js",
