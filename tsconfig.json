{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "lib": ["es5", "dom", "es2017"],
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist/build",
    "strict": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "sourceMap": true,
    "target": "ES2017"
  },
  "include": ["src"]
}